{
  "functions": {
    "api/proxy.js": {
      "runtime": "edge"
    }
  },
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/proxy"
    },
    {
      "source": "/debug",
      "destination": "/api/proxy"
    },
    {
      "source": "/((?!api|public|_next|favicon.ico|health|debug).*)",
      "destination": "/api/proxy"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    }
  ],
  "buildCommand": "echo 'No build required'",
  "outputDirectory": "public"
}